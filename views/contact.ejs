<%- include partials/header.ejs %>

<%- include partials/top_nav.ejs %>

<main class="container">
  <br><h1><%= title %></h1><br>
    <div class="contact-info">
      <p>Feel free to contact me via phone or drop me a message!</p>
      <p>Phone: +1 (647) 234 5678</p><br>
    </div>
    <form id="contact-form" action="/contact" method="POST">
      <label for="fname">First Name:</label>
      <input type="text" id="fname" name="fname" required><br>

      <label for="lname">Last Name:</label>
      <input type="text" id="lname" name="lname" required><br>

      <label for="phone">Contact Number:</label>
      <input type="tel" id="phone" name="phone" required><br>

      <label for="email">Email Address:</label>
      <input type="email" id="email" name="email" required><br>

      <label for="message">Message:</label>
      <textarea id="message" name="message" rows="5" cols="80" required></textarea><br>

      <input id="button" type = "submit" value = "Send">
      <input id="button" type = "reset" value = "Clear">
    </form>
</main>

